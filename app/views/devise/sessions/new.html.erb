
<style>
  .rounded-input {
    border-radius: 10px;
    padding: 8px;
    border-color: #000000;
    margin-bottom: 8px;
  }

  .btn-custom {
    color: #000000;
    width: 180px;
    background-color: #6c757d;
    border-color: #6c757d;
    margin-top: -10px;
  }

  .login-form {
    margin-top: -10px;
  }

  .logo {
    text-align: center;
    margin-bottom: -20px;
  }

  .logo img {
    max-width: 500px;
  }

  h2 {
    font-weight: bold;
    color: #000000;
  }

  .social-icons {
    text-align: center;
    margin-top: 20px;
  }

  .social-icons p {
    margin-bottom: 10px;
  }

  .social-icons img {
    display: inline-block;
    margin: 0 10px;
    max-width: 40px;
    height: auto;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto login-form">
      <div class="logo">
        <img src="https://res.cloudinary.com/dbtr2yaho/image/upload/v1684418942/1200x600wp_yswssf.png" alt="Logo">
      </div>
      <div class="text-center">
        <h2 style="font-weight: bold; color: #000000;">Fa√ßa Login</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "rounded-input" }, label: false, placeholder: "E-mail *" %>
          <br>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "rounded-input" }, label: false, placeholder: "Senha *" %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
          <br>
          <%= f.input :password, as: :boolean, label: "Exibir senha" %>
        </div>
        <div class="form-actions text-center">
  <%= button_tag type: "submit", class: "btn btn-lg rounded-input btn-custom btn-light-gray" do %>
    Entrar
  <% end %>
</div>

        </div>
      <% end %>
      <div class="social-icons">
  <p style="font-weight: bold; color: #000000; font-size: 18px;"> Ou entre com:</p>
</div>
<%= render "devise/shared/links" %>
