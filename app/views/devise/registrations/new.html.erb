
<style>
  .rounded-input {
    border-radius: 10px;
    padding: 10px;
    border-color: #000000;
    margin-bottom: 20px;
  }

  .btn-custom {
    color: #000000;
    width: 180px;
    background-color: #6c757d;
    border-color: #6c757d;
  }

  .btn-privacy {
    color: darkblue;
    text-decoration: none;
    margin-top: 0px;
  }

  .btn-privacy:hover {
    color: blue;
  }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="text-center">
        <h2 style="font-weight: bold;">Crie sua conta</h2>
      </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, input_html: { autocomplete: "name", class: "rounded-input" }, label: false, placeholder: "Nome Completo *" %>

          <%= f.input :date_of_birth, required: true, as: :string, input_html: { autocomplete: "off", class: "rounded-input", placeholder: "Data de Nascimento (dd/mm/aaaa) *" }, label: false %>

          <%= f.input :email, required: true, input_html: { autocomplete: "email", class: "rounded-input" }, label: false, placeholder: "E-mail *" %>
          <%= f.input :password, required: true, hint: ("Mínimo de #{@minimum_password_length} caracteres. Utilize letras, números e símbolos."), input_html: { autocomplete: "new-password", class: "rounded-input", type: 'password', id: 'password' }, label: false, placeholder: "Senha *" %>
          <button type="button" onclick="togglePasswordVisibility('password')">Show Password</button>

          <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class: "rounded-input", type: 'password', id: 'password_confirmation' }, label: false, placeholder: "Confirmação de Senha *" %>
          <button type="button" onclick="togglePasswordVisibility('password_confirmation')">Show Password</button>
            <p>* Campos obrigatórios</p>

          <%= f.input :agree_terms, as: :boolean, label: "Eu li e concordo com os termos de privacidade" %>
          <%= link_to "Clique aqui para ver a nossa Política de Privacidade", privacy_path, class: "btn-privacy" %>

          <%= f.input :agree_terms, as: :boolean, label: "Deseja receber atualizacoes por email?" %>
        </div>
        <div class="text-center">
        <%= f.button :submit, "Cadastrar", class: "btn btn-lg rounded-input btn-custom btn-light-gray btn-bold" %>
        </div>
      </div>
    </div>
  </div>
</div>
        <% end %>
    </div>
  </div>
</div>
</body>
</html>

<script>
function togglePasswordVisibility(id) {
  var x = document.getElementById(id);
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>


