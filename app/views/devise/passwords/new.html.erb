<style>
  .custom-input {
    border-radius: 10px;
    border: 1px solid #000000; 
    padding: 10px;
    width: 100%;
    box-sizing: border-box;
  }
</style>

<div class="text-center">
  <h2>Esqueceu sua senha?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, wrapper_html: { class: 'custom-form' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs text-center">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'custom-input rounded-input mx-auto', style: 'max-width: 300px;', placeholder: 'E-mail *' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: 'custom-button' %>
    </div>
  <% end %>
</div>
